<div id="modal-change-password-user" class="modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="position: fixed; left: 38%; top: 49%; transform: translate(-50%, -50%);">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 50rem">
            <div class="modal-header">
                <h4 class="modal-title">Đổi mật khẩu nhân viên</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="formChangePassword">
                    <div class="form-group">
                        <div class="row removePass">
                            <div class="col-sm-6">
                                <label for="passwordNew" class="col-sm-auto control-label no-padding-right">Mật khẩu <span class="text-danger">*</span></label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="passwordNew" name="passwordNew">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="confirmPasswordNew" class="col-sm-auto control-label no-padding-right">Nhập lại mật khẩu <span class="text-danger">*</span></label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="confirmPasswordNew" name="confirmPasswordNew">
                                    <span id="passwordMessageChange"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-save-change-password" class="btn btn-success">Lưu</button>
                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy bỏ</button>
            </div>
        </div>
    </div>
</div>