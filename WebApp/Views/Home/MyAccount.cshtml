@using Microsoft.AspNetCore.Mvc.Localization
@model BusinessLogic.Dtos.Home.MyAccountResponse
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MyAccount"];
    var httpContext = ViewContext.HttpContext;
    string appDomain = $"{httpContext.Request.Scheme}://{httpContext.Request.Host}";
}
@section Styles {
    <link href="~/assets/landing-page/css/my-account.css" rel="stylesheet" media="all" />
}
<div class="container">
    <div class="my-account-content">
        <div class="breadcrumb-flex">
            <div class="breadcrumb-inner">
                <a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a><span>@Localizer["MyAccount"]</span>
            </div>
        </div>
        <div class="tabs-body">
            <div class="tabs">
                <ul class="tab-links">
                </ul>
                <div class="tab-content">
                    <div id="tab1" class="tab active">
                        <div class="row d-flex justify-content-between wrap-conntent-account">
                            <div class="col-6">
                                <h2>@Localizer["Information"]</h2>
                                <form class="form-wrap" id="my-account-form">
                                    <div class="field upload-image">
                                        @if (string.IsNullOrEmpty(Model.AvatarUrl))
                                        {
                                            <img width="78px" id="showImageMyAccount" height="78px" src="~/assets/landing-page/img/logo/no-avatar.webp" alt="no-avatar" />
                                        }
                                        else
                                        {
                                            <img width="78px" id="showImageMyAccount" height="78px" src="@appDomain@Model.AvatarUrl" alt="no-avatar" />
                                        }
                                        <input type="file" id="fileInputImage" hidden>
                                        <input type="text" id="appDomain" value="@appDomain" hidden>
                                        <input type="text" id="txtImage" name="txtImage" value="@Model.AvatarUrl" hidden>
                                        <label for="txtImage" id="btnSelectImg">
                                            @Localizer["Change"]
                                        </label>
                                    </div>
                                    <div class="field">
                                        <label for="fullname">@Localizer["Full Name"]</label>
                                        <input id="fullname" type="text" class="form-control" name="fullname" value="@Model.FullName" placeholder="@Localizer["Full Name"]">
                                    </div>
                                    <div class="field">
                                        <label for="email">Email</label>
                                        <input id="email" value="@Model.Email" disabled type="text" class="form-control" placeholder="Email">
                                    </div>
                                    <div class="field">
                                        <label for="address">@Localizer["Address"]</label>
                                        <textarea name="" id="address" name="address" cols="30" rows="5">@Model.Address</textarea>
                                    </div>
                                    <div class="field">
                                        <label for="phonenumber">@Localizer["Phone Number"]</label>
                                        <input id="phonenumber" value="@Model.PhoneNumber" name="phonenumber" type="text" class="form-control keypress" placeholder="@Localizer["Phone Number"]">
                                    </div>
                                    <div class="field">
                                        <label for="company">@Localizer["Company"]</label>
                                        <input id="company" type="text" class="form-control" value="@Model.CompanyName" name="company" placeholder="@Localizer["Company"]">
                                    </div>
                                </form>
                                <div class="submit-button">
                                    <button class="Save" id="btnMyAccountSave">@Localizer["Save"]</button>
                                </div>
                            </div>
                            <div class="col-6">
                                <h2>@Localizer["Change Password"]</h2>
                                <div id="error-change-password" style="color:red;"></div>
                                <form class="form-wrap form-login" id="change-password-form">
                                    <div class="field">
                                        <label for="currentpassword">@Localizer["Current Password"]</label>
                                        <div class="field-password">
                                            <input id="currentpassword" name="currentpassword" type="password" class="form-control" placeholder="@Localizer["Current Password"]">
                                        </div>
                                        <span class="eye_icon"></span>
                                    </div>
                                    <div class="field">
                                        <label for="password">@Localizer["New Password"]</label>
                                        <div class="field-password">
                                            <input id="password" type="password" name="password" class="form-control" placeholder="@Localizer["New Password"]">
                                        </div>
                                        <span class="eye_icon"></span>
                                    </div>
                                    <div class="field">
                                        <label for="confirmPassword">@Localizer["Confirm Password"]</label>
                                        <div class="field-password">
                                            <input id="confirmPassword" type="password" name="confirmPassword" class="form-control" placeholder="@Localizer["Confirm Password"]">
                                        </div>
                                        <span class="eye_icon"></span>
                                    </div>
                                </form>
                                <div class="submit-button">
                                    <button class="Save" id="btnChangePassword">@Localizer["Save"]</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/client-app/controllers/home/my-account.js"></script>
}