@{
    Layout = null;
}
@using Microsoft.AspNetCore.Mvc.Localization
@model BusinessLogic.Dtos.Identity.Requests.RegisterRequest
@inject IViewLocalizer Localizer
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "https://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta charset="utf-8">
    <title>SignUp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
    <meta content="Coderthemes" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets\images\favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@600;700&family=Inter:wght@500;600&display=swap"
          rel="stylesheet">

    <!-- App css -->
    <link href="~/assets/page/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/page/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/page/css/app.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    <
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <a href="/home">
                                    <span><img src="~/assets/landing-page/image/Logo.png" alt="" height="22"></span>
                                </a>
                                <p class="text-muted mb-4 mt-3">Don't have an account? Create your own account, it takes less than a minute.</p>
                            </div>

                            <form asp-action="SignUp">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label for="Firstname">@Localizer["FullName"]</label>
                                    <input id="Firstname" type="text" class="form-control" placeholder="@Localizer["FirstName"]" asp-for="FirstName" value="@Model.FirstName">
                                    <input id="Lastname" type="text" class="form-control" placeholder="@Localizer["LastName"]" asp-for="LastName" value="@Model.LastName">
                                </div>

                                <div class="form-group">
                                    <label for="emailaddress">Email address</label>
                                    <input id="Email" type="text" class="form-control" placeholder="Email" asp-for="Email" value="@Model.Email">
                                </div>

                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input id="Password" type="password" class="form-control" placeholder="@Localizer["Password"]" asp-for="Password" value="@Model.Password">
                                </div>

                                <div class="form-group">
                                    <label for="password">Confirm Password</label>
                                    <input id="ConfirmPassword" type="password" class="form-control" placeholder="@Localizer["ConfirmPassword"]" asp-for="ConfirmPassword" value="@Model.ConfirmPassword">
                                </div>

                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signup">
                                        <label class="custom-control-label" for="checkbox-signup">I accept <a href="javascript: void(0);" class="text-dark">Terms and Conditions</a></label>
                                    </div>
                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit">@Localizer["SignUp"]</button>
                                </div>
                            </form>

                            <div class="text-center">
                                <h5 class="mt-3 text-muted">Sign up using</h5>
                                <ul class="social-list list-inline mt-3 mb-0">
                                    <li class="list-inline-item">
                                        <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                    </li>
                                </ul>
                            </div>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Already have account?  <a href="/identity/login" class="text-muted font-weight-medium ml-1">Sign In</a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->


    <footer class="footer footer-alt">
        2016 - 2019 &copy; Minton theme by <a href="" class="text-muted">Coderthemes</a>
    </footer>

    <!-- Vendor js -->
    <script src="~/assets/page/js/vendor.min.js"></script>
    <!-- App js -->
    <script src="~/assets/page/js/app.min.js"></script>
    <script src="~/assets/landing-page/js/jquery.min.js"></script>
    <script src="~/assets/landing-page/js/main.js" defer></script>
</body>
</html>