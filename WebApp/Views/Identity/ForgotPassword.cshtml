@{
    Layout = null;
}
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model BusinessLogic.Dtos.Identity.Requests.ForgotPasswordRequest

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "https://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>@Localizer["ForgotPassword"]</title>
    <meta name="description" content="Empowering Sustainability with Smart Environmental Accounting | Minimax" />
    <meta name="keywords" content="Minimax" />

    <link rel="icon" href="~/assets/favicon.ico" type="image/vnd.microsoft.icon">
    <meta property="og:title" content="@Localizer["ForgotPassword"]" />
    <meta property="og:description" content="Empowering Sustainability with Smart Environmental Accounting | Minimax" />
    <meta property="og:type" content="article" />
    <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@600;700&family=Inter:wght@500;600&display=swap"
          rel="stylesheet">
    <link href="~/assets/landing-page/css/common.css" rel="stylesheet" media="all" />
    <link href="~/assets/landing-page/css/login.css" rel="stylesheet" media="all" />
</head>

<body>
    <div class="l-body" id="content">
        <div class="login-wrap">
            <div class="login-inner d-flex flex-wrap align-items-center justify-content-center">
                <div class="wrap-forgot-password">
                    @if (string.IsNullOrEmpty(Model.Email))
                    {
                        <form asp-action="ForgotPassword" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="forgot-password-enter">
                                <h2>@Localizer["ForgotYourPassword"]</h2>
                                <p>@Localizer["InputEmail"]</p>
                                <div class="field form-login p-0">
                                    <label for="Email">Email</label>
                                    <div class="field-Email">
                                        <input id="Email" type="text" class="form-control" placeholder="Email" asp-for="Email" value="@Model.Email">
                                    </div>
                                </div>
                                <button type="submit" class="submit-forgot">@Localizer["Continue"]</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="forgot-password-success">
                            <h2>@Localizer["EmailOnTheWay"]</h2>
                            <p>@Localizer["SendMailSuccess1"] <strong>@Model.Email</strong>. @Localizer["SendMailSuccess2"]</p>
                            <span>
                                <img src="~/assets/landing-page/img/icon/letter_mess.webp" width="56px" height="56px" alt="letter_mess">
                            </span>
                            <a asp-action="Login">@Localizer["Login"]</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/assets/landing-page/js/jquery.min.js" defer></script>
<script src="~/assets/landing-page/js/main.js" defer></script>
</html>