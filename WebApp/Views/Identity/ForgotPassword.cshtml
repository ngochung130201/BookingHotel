@{
    Layout = null;
}
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model BusinessLogic.Dtos.Identity.Requests.ForgotPasswordRequest

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "https://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>@Localizer["ForgotPassword"]</title>
    <meta name="description" content="Empowering Sustainability with Smart Environmental Accounting | Minimax" />
    <meta name="keywords" content="Minimax" />

    <link rel="icon" href="~/assets/landing-page/image/favicon.png" type="image/png">
    <meta property="og:title" content="@Localizer["ForgotPassword"]" />
    <meta property="og:description" content="Empowering Sustainability with Smart Environmental Accounting | Minimax" />
    <meta property="og:type" content="article" />
    <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@600;700&family=Inter:wght@500;600&display=swap"
          rel="stylesheet">

    <link href="~/assets/page/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/page/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/page/css/app.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <a href="index.html">
                                    <span><img src="~/assets/landing-page/image/Logo.png" alt="" height="22"></span>
                                </a>
                                <p class="text-muted mb-4 mt-3">Enter your email address and we'll send you an email with instructions to reset your password.</p>
                            </div>
                            <form asp-action="ForgotPassword" method="post">
                                <div class="form-group mb-3">
                                    <label for="emailaddress">Email address</label>
                                    <input id="emailaddress" type="text" class="form-control" placeholder="Enter your email" asp-for="Email" value="@Model.Email">
                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Reset Password </button>
                                </div>
                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Back to <a href="/login" class="text-muted font-weight-medium ml-1">Log in</a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->


    <footer class="footer footer-alt">
        2016 - 2019 &copy; Minton theme by <a href="" class="text-muted">Coderthemes</a>
    </footer>

    <!-- Vendor js -->
    <script src="assets\js\vendor.min.js"></script>

    <!-- App js -->
    <script src="assets\js\app.min.js"></script>

</body>
</html>