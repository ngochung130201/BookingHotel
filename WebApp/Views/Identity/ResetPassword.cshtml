@{
    Layout = null;
}
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model BusinessLogic.Dtos.Identity.Requests.ResetPasswordRequest
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "https://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>@Localizer["ResetPassword"]</title>
    <meta name="description" content="Empowering Sustainability with Smart Environmental Accounting | Minimax" />
    <meta name="keywords" content="Minimax" />

    <link rel="icon" href="~/assets/favicon.ico" type="image/vnd.microsoft.icon">
    <meta property="og:title" content="@Localizer["ResetPassword"]" />
    <meta property="og:description" content="Empowering Sustainability with Smart Environmental Accounting | Minimax" />
    <meta property="og:type" content="article" />
    <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@600;700&family=Inter:wght@500;600&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="~/assets/landing-page/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/landing-page/css/app.css" />
</head>

<body>
    <div class="l-body" id="content">
        <div class="login-wrap">
            <div class="login-inner d-flex flex-wrap align-items-center justify-content-center">
                <div class="wrap-forgot-password">
                    @if (!Model.ResetFlag)
                    {
                        <form asp-action="ResetPassword" method="post">
                            @Html.AntiForgeryToken()
                            <div class="forgot-password-enter">
                                <h2>@Localizer["ResetYourPassword"]</h2>
                                <p>@Localizer["MessageReset"]</p>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="field form-login p-0">
                                    <label for="Email">Email</label>
                                    <input id="Email" type="text" class="form-control" placeholder="Email" asp-for="Email" value="@Model.Email">
                                </div>
                                <div class="field form-login p-0 mt-4">
                                    <label for="Password">@Localizer["Password"]</label>
                                    <input id="Password" type="password" class="form-control" placeholder="@Localizer["Password"]" asp-for="Password" value="@Model.Password">
                                </div>
                                <div class="field form-login p-0 mt-4">
                                    <label for="ConfirmPassword">@Localizer["ConfirmPassword"]</label>
                                    <input id="ConfirmPassword" type="password" class="form-control" placeholder="@Localizer["ConfirmPassword"]" asp-for="ConfirmPassword" value="@Model.ConfirmPassword">
                                </div>
                                <input type="hidden" asp-for="Token" value="@Model.Token" />
                                <button type="submit" class="submit-forgot">@Localizer["ResetPassword"]</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="forgot-password-success">
                            <h2>@Localizer["EmailOnTheWay"]</h2>
                            <p>@Localizer["EmailSuccess"]</p>
                            <a asp-action="Login">@Localizer["BackToLogin"]</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/assets/landing-page/js/jquery.min.js"></script>
<script src="~/assets/landing-page/js/main.js" defer></script>
</html>